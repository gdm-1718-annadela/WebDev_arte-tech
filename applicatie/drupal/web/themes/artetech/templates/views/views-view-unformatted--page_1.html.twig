{#
/**
 * @file
 * Theme override to display a view of unformatted rows.
 *
 * Available variables:
 * - title: The title of this group of rows. May be empty.
 * - rows: A list of the view's row items.
 *   - attributes: The row's HTML attributes.
 *   - content: The row's content.
 * - view: The view object.
 * - default_row_class: A flag indicating whether default classes should be
 *   used on rows.
 *
 * @see template_preprocess_views_view_unformatted()
 */
#}


<form action="hello" method="post">
<label>Geef een benaming aan de periode</label>
<div class="inputs">
<input class="visible input"type="text" name="title" placeholder={{view.klant}}></input>
<input type="text" name="klant" value={{view.klant}}></input>
<input type="date" name="min" value={{view.min}}></input>
<input type="date" name="max" value={{view.max}}></input>
<input type="number" name="uur" value={{view.hourRate}}></input>
<input type="number" name="trans" value={{view.transRate}}></input>
<button class="btnColor" type="submit" name="submit" >Check periode</button>
<p>{{view.datum}}</p>
</div>
</form>

{% if title %}
  <h3>{{ title }}</h3>
{% endif %}
<div class="row">
  <p>totaal gewerkte uren: {{view.hourTime }}:{{view.minutTime }}<p>
  <p>kost: {{view.hourRate }} euro</hp>
  <p>transport : {{view.transRate }} euro/km</p>


<div class="blockTasks">
{% for row in rows %}
  {%
    set row_classes = [
      default_row_class ? 'views-row',
    ]
  %}

  <div class="blockTask"{{ row.attributes.addClass(row_classes) }}>
    {{- row.content -}}
  </div>
{% endfor %}

</div>